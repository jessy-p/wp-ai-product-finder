<?xml version="1.0"?>
<ruleset name="AI Product Finder">
    <description>WordPress Coding Standards for AI Product Finder</description>
    
    <!-- Use WordPress Coding Standards with Documentation -->
    <rule ref="WordPress"/>
    <rule ref="WordPress-Docs"/>

    <!-- Only check PHP files -->
    <file>ai-product-finder.php</file>
    <file>includes/</file>
    
    <!-- Exclude paths -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/src/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.jsx</exclude-pattern>

</ruleset>